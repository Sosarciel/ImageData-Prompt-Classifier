{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
			"@/src/*"           : ["./src/*"],
			"@/*"               : ["./*"],
			"@"                 : ["./src/index"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.js","./jest/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
